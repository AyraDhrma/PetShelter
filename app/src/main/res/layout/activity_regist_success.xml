<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterSuccess">

    <LinearLayout
        android:id="@+id/linear_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_check"
            android:src="@drawable/ic_check_box_black_24dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswaldbold"
            android:text="@string/content_title_register_successfull"
            android:textAlignment="center"
            android:textColor="#fab700"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswaldbold"
            android:text="@string/content_register_success"
            android:textAlignment="center"
            android:textColor="#fab700"
            android:textSize="40sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_regist"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/oswaldbold"
            android:text="@string/content_title_home"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </LinearLayout>


</RelativeLayout>